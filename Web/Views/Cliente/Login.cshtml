@model Web.Models.CredencialesViewModel
@{ ViewData["Title"] = "Login";
    Layout = "_LayoutLogin"; }

<main class="form-signin">

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-4 offset-md-4 col-12">
                <form asp-action="Autenticar">
                    <h1 class="h3 mb-3 fw-normal">Inicie Sesion</h1>
                    <label for="inputEmail" class="visually-hidden">Correo</label>
                    <input asp-for="NombreUsuario" value="" type="email" id="inputEmail" class="form-control" placeholder="Email address" required autofocus />
                    <label for="inputPassword" class="visually-hidden">Contraseña</label>
                    <input asp-for="Contrasena" value="" type="password" for="inputPassword" class="form-control" placeholder="Contraseña" required />
                    <button class="w-100 btn btn-lg btn-primary mt-3" type="submit">Ingresar</button>
                    <a class="" asp-area="" asp-controller="Restablecimiento" asp-action="Crear">Olvido la contrasena</a>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                </form>
            </div>
        </div>
    </div>
</main>
